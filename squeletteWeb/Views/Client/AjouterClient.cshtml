@model squeletteWeb.Métier.Client
@{
    ViewBag.Title = "AjouterClient";
}

<h2>AjouterClient</h2>

<div class="form-horizontal">
    @using (Html.BeginForm("AjouterClient", "Client", FormMethod.Post))
    {
        <span>@Html.DisplayNameFor(model => model.Name) :</span><span>@Html.TextBoxFor(model => model.Name)</span><span>@Html.ValidationMessageFor(model=>model.Name)</span><br />
        <span>@Html.DisplayNameFor(model => model.Surname) :</span><span>@Html.TextBoxFor(model => model.Surname)</span><span>@Html.ValidationMessageFor(model => model.Surname)</span> <br />
        <span>@Html.DisplayNameFor(model => model.Salary) :</span><span>@Html.TextBoxFor(model => model.Salary)</span><span>@Html.ValidationMessageFor(model => model.Salary)</span><br />
        <span>@Html.DisplayNameFor(model => model.BonusPercent) :</span><span>@Html.TextBoxFor(model => model.BonusPercent)</span><span>@Html.ValidationMessageFor(model => model.BonusPercent)</span><br />
        <span>@Html.DisplayNameFor(model => model.DateOfBirth) :</span><span>@Html.TextBoxFor(model => model.DateOfBirth, new { @class = "form-control datecontrol", type = "date" })</span><span>@Html.ValidationMessageFor(model => model.DateOfBirth)</span><br />
        <span>@Html.DisplayNameFor(model => model.StartTime) :</span><span>@Html.TextBoxFor(model => model.StartTime, new { @class = "form-control datecontrol",type="date" })</span><span>@Html.ValidationMessageFor(model => model.StartTime)</span><br />
        <span>@Html.DisplayNameFor(model => model.login) :</span><span>@Html.TextBoxFor(model => model.login)</span><br />
        <span>@Html.DisplayNameFor(model => model.MotDePasse) :</span><span>@Html.PasswordFor(model => model.MotDePasse)</span><span>@Html.ValidationMessageFor(model => model.ConfirmationMdP)</span><br />
        <span>@Html.DisplayNameFor(model => model.ConfirmationMdP) :</span><span>@Html.PasswordFor(model => model.ConfirmationMdP)</span>
        <button type="submit">Ajouter</button>
    }
</div>


